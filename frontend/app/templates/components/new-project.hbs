<BsForm @formLayout="horizontal" @model={{project}} @onSubmit={{action submit}} as |form|>
  <div class="form-primary-fields row">
    <div class="col">
      <form.element @controlType="text" @label="Project Name*" @placeholder="Project Name" @property="name" />
    </div>
  </div>
  <div class="row">
    <div class="col">
      <form.element @label="Circle" @property="circle" as |el|>
        <DataPowerSelect @modelName='circle' @onchange={{action (mut el.value)}} @selected={{el.value}} @placeholder="Select Circle" as |circle|>
          {{circle.name}}
        </DataPowerSelect>
      </form.element>
      <form.element @controlType="text" @label="Client" @placeholder="Client" @property="client" />
  
      <form.element @controlType="text" @label="Gig Finding" @placeholder="Gig Finding" @property="gigFinding" />
      <form.element @controlType="text" @label="Gig Doing" @placeholder="Gig Doing" @property="gigDoing" />
      <form.element @controlType="text" @label="Gig Management" @placeholder="Gig Management" @property="gigManagement" />
      <form.element @controlType="text" @label="Gig Value" @placeholder="Gig Value" @property="gigValue" />
      <form.element @controlType="text" @label="Gig Value Details" @placeholder="Gig Value Details" @property="gigValueDetails" />
  
      <form.element @controlType="text" @label="Description" @placeholder="Description" @property="description" />
  
      <form.element @controlType="text" @label="Expected Duration" @placeholder="Expected Duration" @property="expectedDuration" />
      <form.element @controlType="text" @label="Start Date" @placeholder="Start Date" @property="startDate" />
      <form.element @controlType="text" @label="Deadline" @placeholder="Deadline" @property="deadline" />
  
      <form.element @controlType="text" @label="Project Lead" @placeholder="Project Lead" @property="projectLead" />
      <form.element @controlType="text" @label="Project Manager" @placeholder="Project Manager" @property="projectManager" />
  
      <form.element @controlType="text" @label="Objectives" @placeholder="Objectives" @property="objectives" />
  
      <form.element @controlType="text" @label="Key Results" @placeholder="Key Results" @property="keyResults" />
      <form.element @controlType="text" @label="Stage" @placeholder="Stage" @property="stage" />
      <form.element @controlType="text" @label="Status" @placeholder="Status" @property="status" />
  
      <form.element @controlType="text" @label="Weekly Report" @placeholder="Weekly Report" @property="weeklyReport" />
      <BsButton @defaultText="Create" @type="primary" @buttonType="submit" @block=true />

    </div>
  </div>
</BsForm>